<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="2dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_win_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win 10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/coin"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_draw_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="#112068"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_slots_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left: 1/5"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_percentage_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80% Filled"
            android:textColor="#00BCD4"
            android:textSize="13sp"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="80"
            android:max="100"
            android:progressDrawable="@drawable/progress_drawable"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_check_winners"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Check Winners"
                android:background="@drawable/button_border"
                android:textColor="#6C3BFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_get_free_entry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Get Free Entry"
                android:backgroundTint="#6C3BFF"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_outline"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>