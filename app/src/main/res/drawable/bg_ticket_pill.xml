<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border: adjusted to match light bluish-purple tone -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6FC3FF" /> <!-- Lighter bluish border -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Inner gradient background: brighter and softer glow -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A6D9FF"
                android:endColor="#CDEBFF"
                android:angle="90" />
            <corners android:radius="48dp" />
        </shape>
    </item>

</layer-list>
