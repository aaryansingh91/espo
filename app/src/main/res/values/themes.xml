<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MgamerApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/purple_bg</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_bg</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>

        <item name="android:windowLightStatusBar">false</item> <!-- Force white icons -->

        <item name="colorOnSurface">@color/dark_black</item>
    </style>

    <style name="Theme.MgamerApp" parent="Base.Theme.MgamerApp" />

    <!-- Custom CardView style -->
    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48sp</item>
        <item name="cornerSizeTopLeft">48sp</item>
        <item name="cornerSizeBottomLeft">0sp</item>
        <item name="cornerSizeBottomRight">0sp</item>
    </style>

    <!-- Circle Image View style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Global TextView style -->
    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
